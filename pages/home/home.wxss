.main{
  background-color: #fff; 
}
.map{
  width: 750rpx;
  height: 360rpx;
}
.map image{
  width: 750rpx;
  height: 360rpx;
}
image{
  width: 68rpx;
  height: 68rpx;
}
.nav{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  width: 750rpx;
  height: 330rpx;
  background-color: #fff;
}
.nav .item{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 174rpx;
  height: 120rpx;
  font-size: 24rpx;
}
.recommend{
  width:750rpx;
  /* margin-bottom: 100rpx; */
}
.recommend-nav{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 690rpx;
  height: 80rpx;
  border-bottom: 1px solid #ddd;
  margin: 20rpx auto 0;
  font-weight: 588;
  color: #666;
}
.recommend-nav>view{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.active{
  font-size: 34rpx;
  color: #000;
  border-bottom: 4rpx solid skyblue;
}
.swiper{
  width: 690rpx;
  height: 600rpx;
  margin: 0 auto;
  /* background-color: #ddd; */
}
.btns{
  display: flex;
  align-items: center;
  height: 120rpx;
}
.btns>view{
  width: 120rpx;
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  border-color:#eee; 
  margin: 0 10rpx;
  background-color: #eee;
  text-align: center;
  color: #666;
  font-size: 24rpx;
}
.btns>.ridership{
  width: 130rpx;
}
.btns>view>image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.recommend-public{
  width: 690rpx;
  height: 480rpx;
  /* background-color: yellow; */
}
.catering-item{
  width: 670rpx;
  /* height: 280rpx; */
  padding:10rpx;
  margin-bottom: 30rpx;
}
.top-introduce{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.introduce-content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 450rpx;
  height: 180rpx;
}
.top-introduce image{
  width: 180rpx;
  height: 180rpx;
}
.title{
  font-size: 30rpx;
  font-weight: 580;
}
.price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.star{
  color: #fb2;
}
.star span{
  display: inline-block;
  color: #333;
  font-size: 28rpx;
  font-weight: normal;
  padding: 0 10rpx;
}
.distance{
  color: #333;
}
.tabels{
  display: flex;
  align-content: center;
}
.tabels>view{
  display: inline-block;
  height: 26rpx;
  line-height: 26rpx;
  padding-left: 10rpx;
  border-left: 1px solid #333;
  font-size: 26rpx;
  color: #333;
}
.tabels>view:first-child{
  padding: 0 10rpx 0 0;
  border-left:none; 
}
.evaluate{
  display: flex;
  align-content: center;
  font-size: 24rpx;
  color:#fb2;
}
.evaluate>view{
  display: inline-block;
  padding: 0 5rpx;
  margin-right: 20rpx;
  border: 1px solid #eee;
}
.meituan-info{
  width: 450rpx;
  font-size: 26rpx;
  color: #333;
  padding-left: 200rpx;
}
.meituan-info>view{
  display: flex;
  align-items: center;
  width: 450rpx;
  margin: 10rpx 0;
}
.meituan-info span{
  color: #fff;
  width: 25rpx;
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  padding: 2rpx;
  background-color: #2bdf80;
  font-size: 24rpx;
  margin: 0 10rpx 0 0;
}
.meituan-info .coupons span{
  background-color: #fb2;
}

.hotel-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.hotel-item>image{
  width: 180rpx;
}
.hotel-info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 480rpx;
  height: 250rpx;
}
.hotel-info .title{
  font-size: 30rpx;
  color: black;
  margin-bottom: 10rpx;
}
.hotel-info .title image{
  width: 35rpx;
  height: 35rpx;
}
.grade-info{
  display: flex;
  align-items: center;  
  color: #333;
  font-size: 26rpx;
}
.grade-info>view{
  margin-right: 25rpx;
}
.grade-info>view:first-child{
  color: #59bbee;
}
.grade-info span{
  font-size: 28rpx;
  color: #59bbee;
  margin-right: 15rpx;
}
.hotel-info .location{
  font-size: 26rpx;
  color: #333;
}
.hotel-item .labels{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 18rpx;
  margin: 10rpx 0;
}
.hotel-info .labels>view{
  display: inline-block;
  padding: 0 4rpx;
  border: 1px solid #ddd;
  color: #59bbee;
}
.hotel-info .prices{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ff4d0b;
  padding: 0 20rpx 0 0;
  font-size: 26rpx;
}
.prices>view:last-child{
  color: #333;
}
.prices span{
  font-size: 30rpx;
  color: #ff4d0b;
}
.discounts{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 480rpx;
}
.discounts span{
  display: inline-block;
  height: 25rpx;
  padding: 2rpx 5rpx;
  line-height: 25rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  background-color: #ff4d0b;
  color: #fff;
}
.discounts image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 10rpx;
}

.scenic-item{
  height: 290rpx;
  /* background-color: yellow; */
  /* border-bottom: 1px solid #ddd; */
}
.scenic-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scenic-top image{
  width: 180rpx;
  height: 180rpx;
}
.scenic-top .scenic-info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 480rpx;
  height: 200rpx;
  border-bottom: 1px #aeaeae dotted;
}
.scenic-info .title{
  font-size: 30rpx;
  font-weight: 600rpx;
  color: black;
}
.scenic-info .scenic-grade{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 28rpx;
  line-height: 28rpx;
  color: #aeaeae;
  font-size: 28rpx;
  margin: 10rpx 0;
}
.scenic-grade>view:first-child{
  color: #fb2;
}
.scenic-grade span{
  padding-left: 10rpx;
  border-left: 1px solid #aeaeae;
  margin-left: 20rpx;
  color: #aeaeae;
}
.scenic-labels{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  color: #aeaeae;
}
.scenic-labels>view{
  padding-left: 10rpx;
  border-left: 1px solid #aeaeae;
}
.scenic-labels>view:first-child{
  padding-right: 10rpx;
  padding-left: 0;
  border-left: none;
}
.scenic-price{
  display: flex;
  align-items: center;
}
.price-info{
  color: #333;
}
.price-info span{
  color: #ff4d0b;
  font-size: 30rpx;
}
.price-label{
  font-size: 20rpx;
  display: inline-block;
  padding: 0 8rpx;
  border: 1px solid #aeaeae;
  border-radius: 5rpx;
  margin: 0 10rpx;
}
.visit-pro{
  width: 490rpx;
  padding: 0 0 0 20rpx ;
  margin: 20rpx 0 0 200rpx;
  font-size: 28rpx;
}